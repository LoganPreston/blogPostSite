<%-include("partials/header")-%>
<h1>Home</h1>
<p><%=home%></p>

<%blogPosts.forEach(post => {%>
<h2><%=post.title%></h2>
<%if(post.content.length>100){%>
    <p>
    <%=post.content.substring(0,100)+"..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
    </p>
<%} else{%>
    <p><%=post.content%></p>
<%}});%> 

<%-include("partials/footer")-%>
